<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SOEFR.Views"
            x:Class="SOEFR.Views.BottomTabPage"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="#3366ff"
            BarTextColor="Azure">
    
    <NavigationPage Title="Transcribe"
                    IconImageSource="record">
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Transcriptions"
                    IconImageSource="transcriptions">
        <x:Arguments>
            <local:Transcriptions/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Settings"
                    IconImageSource="cap">
        <x:Arguments>
            <local:Settings/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
