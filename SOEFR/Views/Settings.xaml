<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOEFR.Views.Settings"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#262626"
             x:DataType="vm: SettingsViewModel">
    <!-- Assuming the ViewModel is in the namespace 'SOEFR.ViewModels' -->

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <Label Text="{Binding StatusMessage}" FontSize="Medium" />
        <Button Text="Scan for Devices" Command="{Binding ScanCommand}" />
    </VerticalStackLayout>
</ContentPage>
